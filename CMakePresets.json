{
	"version": 3,
	"configurePresets": [
		{
			"name": "windows",
			"hidden": true,
			"generator": "Ninja",
			"binaryDir": "${sourceDir}/out/build/${presetName}",
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Windows"
			}
		},
		{
			"name": "x86",
			"hidden": true,
			"architecture": {
				"value": "x86",
				"strategy": "external"
			},
			"cacheVariables": {
				"OUT_FILE_SUFFIX": "x86"
			},
			"vendor": {
				"jetbrains.com/clion": {
					"toolchain": "Visual Studio x86"
				}
			}
		},
		{
			"name": "x64",
			"hidden": true,
			"architecture": {
				"value": "x64",
				"strategy": "external"
			},
			"cacheVariables": {
				"OUT_FILE_SUFFIX": "x64"
			},
			"vendor": {
				"jetbrains.com/clion": {
					"toolchain": "Visual Studio x64"
				}
			}
		},
		{
			"name": "debug",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug"
			}
		},
		{
			"name": "relwithdebinfo",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "RelWithDebInfo"
			}
		},

		{ "name": "Windows-x86-Debug", "inherits": [ "windows", "x86", "debug" ] },
		{ "name": "Windows-x86-Release", "inherits": [ "windows", "x86", "relwithdebinfo" ] },
		{ "name": "Windows-x64-Debug", "inherits": [ "windows", "x64", "debug" ] },
		{ "name": "Windows-x64-Release", "inherits": [ "windows", "x64", "relwithdebinfo" ] }
	],
	"buildPresets": [
		{ "name": "Windows-x86-Debug", "configurePreset": "Windows-x86-Debug" },
		{ "name": "Windows-x86-Release", "configurePreset": "Windows-x86-Release" },
		{ "name": "Windows-x64-Debug", "configurePreset": "Windows-x64-Debug" },
		{ "name": "Windows-x64-Release", "configurePreset": "Windows-x64-Release" }
	]
}